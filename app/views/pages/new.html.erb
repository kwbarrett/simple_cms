<%= link_to  '<< Back to List', pages_path, :class => 'back-link' %>

<div class="pages new">
  <h2>Create Page</h2>
  <!--  This is the long form of the form declaration but is not required -->
  <%#= form_for(@subject, :url => subjects_path, :method => 'post' ) do |f| %>
  <%= form_for(@page) do |f| %>

    <table summary="Page form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Page") %>
    </div>

  <% end %>
</div>
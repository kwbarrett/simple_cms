<% @page_title ="Edit #{@section.name}" %>

<%= link_to  '<< Back to List', sections_path, :class => 'back-link' %>

<div class="sections new">
  <h2>Edit Section</h2>
  <!--  This is the long form of the form declaration but is not required -->
  <%#= form_for(@subject, :url => subjects_path, :method => 'post' ) do |f| %>

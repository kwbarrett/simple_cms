<% @page_title ="Edit #{@subject.name}" %>

<%= link_to  '<< Back to List', subjects_path, :class => 'back-link' %>

<div class="subjects edit">
  <h2>Edit Subject</h2>
  <!--  This is the long form of the form declaration but is not required -->
  <%#= form_for(@subject, :url => subjects_path, :method => 'post' ) do |f| %>
  <%= form_for(@subject) do |f| %>

    <%= render(:partial => 'form', :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= f.submit("Update Subject") %>
    </div>

  <% end %>
</div>